section.container
	.row.row-center
		.column
			header
				h1 dante.codes

	.row.row-center.contact-info
		.column
			p {{ $ctrl.greeting }}

	.row.row-center.contact-info
		.column
			ul
				li
					a(
						title="{{$ctrl.email}}"
						ng-href="mailto:{{$ctrl.email}}"
					)
						svg(viewbox="0 0 32 32")
							use(xlink:href="#i-gmail")
						.hover-text gmail
				li
					a(
						title="{{$ctrl.github}}"
						target="_blank"
						ng-href="//github.com/{{$ctrl.github}}"
					) 
						svg(viewbox="0 0 32 32")
							use(xlink:href="#i-github")
						.hover-text github
				li
					a(
						target="_blank"
						ng-href="//keybase.io/{{$ctrl.keybase}}"
					)
						svg(viewbox="0 0 32 32")
							use(xlink:href="#i-keybase")
						.hover-text keybase
